@*@model IEnumerable<WebApplication2.Models.User>*@

@model WebApplication2.Models.IndexViewModel
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Users.First().FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.First().LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.First().Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.First().Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.First().Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.First().About)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.First().Adress)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@for (int i = 1; i <= Model.PageInfo.TotalPages; i++)
{
    <input class = "btn btn-primary btn-xs" id="@i.ToString()" type="button" value="@i.ToString()" onclick="search(event)">
}


